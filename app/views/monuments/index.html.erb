<p style="color: green"><%= notice %></p>

<div class="container">
  <div data-controller="insert-in-list">
    <h1>Monuments</h1>
    <div data-insert-in-list-target="items" id="monuments">
      <% @monuments.each do |monument| %>
        <%= render monument %>
        <p>
        </p>
      <% end %>
    </div>
    <div data-controller="toggle">
      <button data-action="click->toggle#fire" class="btn btn-primary">Add new monument</button>
      <span data-toggle-target="togglaElement" class="d-none">
        <%= render 'form', monument: @monument %>
      </span>
    </div>
  </div>
</div>

